{
  "meta": {
    "source": "Reverse-engineered from provided landing page screenshots (desktop hero + full-page layout).",
    "confidence": {
      "colors": "medium",
      "typography": "medium",
      "spacing": "high",
      "effects": "high",
      "components": "high"
    },
    "notes": [
      "Exact hex values are estimated from screenshots (compression + lighting). Use as a starting point and refine with your actual CSS variables / Figma inspect.",
      "Design is clean/airy, white-first, with a strong red brand accent and a dark navy footer."
    ]
  },
  "colors": {
    "brand": {
      "primary": "#E11D2E",
      "primaryHover": "#C51624",
      "primaryActive": "#A7121D",
      "secondary": "#0F172A",
      "accent": "#FF3B30",
      "accentSoft": "#FFE5E7"
    },
    "neutral": {
      "white": "#FFFFFF",
      "background": "#FFFFFF",
      "backgroundAlt": "#F8FAFC",
      "surface": "#FFFFFF",
      "surfaceRaised": "#FFFFFF",
      "surfaceMuted": "#F3F4F6",
      "border": "#E5E7EB",
      "borderStrong": "#CBD5E1",
      "divider": "#EEF2F7",
      "overlay": "rgba(0,0,0,0.45)",
      "footer": "#0B1220",
      "footerAlt": "#0F1A2B"
    },
    "text": {
      "heading": "#0B1220",
      "body": "#111827",
      "muted": "#6B7280",
      "subtle": "#94A3B8",
      "inverse": "#FFFFFF",
      "link": "#E11D2E",
      "linkHover": "#C51624"
    },
    "semantic": {
      "success": "#22C55E",
      "successBg": "#DCFCE7",
      "warning": "#F59E0B",
      "warningBg": "#FEF3C7",
      "error": "#EF4444",
      "errorBg": "#FEE2E2",
      "info": "#3B82F6",
      "infoBg": "#DBEAFE",
      "focusRing": "rgba(225,29,46,0.28)"
    }
  },
  "typography": {
    "fontFamilies": {
      "sans": {
        "preferred": "Inter",
        "fallback": "ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, \"Apple Color Emoji\", \"Segoe UI Emoji\""
      },
      "heading": {
        "preferred": "Poppins",
        "fallback": "Inter, ui-sans-serif, system-ui"
      },
      "mono": {
        "preferred": "JetBrains Mono",
        "fallback": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, \"Liberation Mono\", \"Courier New\", monospace"
      },
      "serif": {
        "preferred": "Merriweather",
        "fallback": "ui-serif, Georgia, Cambria, \"Times New Roman\", Times, serif"
      }
    },
    "scale": {
      "h1": { "fontSizePx": 56, "lineHeight": 1.1, "letterSpacing": -0.02, "fontFamily": "heading" },
      "h2": { "fontSizePx": 40, "lineHeight": 1.15, "letterSpacing": -0.015, "fontFamily": "heading" },
      "h3": { "fontSizePx": 28, "lineHeight": 1.2, "letterSpacing": -0.01, "fontFamily": "heading" },
      "h4": { "fontSizePx": 20, "lineHeight": 1.25, "letterSpacing": -0.005, "fontFamily": "heading" },
      "bodyLg": { "fontSizePx": 18, "lineHeight": 1.6, "letterSpacing": 0, "fontFamily": "sans" },
      "body": { "fontSizePx": 16, "lineHeight": 1.6, "letterSpacing": 0, "fontFamily": "sans" },
      "bodySm": { "fontSizePx": 14, "lineHeight": 1.55, "letterSpacing": 0, "fontFamily": "sans" },
      "caption": { "fontSizePx": 12, "lineHeight": 1.45, "letterSpacing": 0.01, "fontFamily": "sans" }
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    }
  },
  "layout": {
    "container": {
      "maxWidthPx": 1120,
      "gutterPx": 24
    },
    "grid": {
      "columns": 12,
      "columnGapPx": 24,
      "rowGapPx": 24
    },
    "section": {
      "paddingY": {
        "desktopPx": 80,
        "tabletPx": 64,
        "mobilePx": 48
      },
      "paddingX": {
        "desktopPx": 24,
        "tabletPx": 20,
        "mobilePx": 16
      }
    }
  },
  "spacing": {
    "scalePx": {
      "0": 0,
      "1": 4,
      "2": 8,
      "3": 12,
      "4": 16,
      "5": 20,
      "6": 24,
      "7": 28,
      "8": 32,
      "9": 36,
      "10": 40,
      "12": 48,
      "14": 56,
      "16": 64,
      "20": 80,
      "24": 96
    },
    "density": "airy",
    "common": {
      "stackSm": 12,
      "stackMd": 16,
      "stackLg": 24,
      "stackXl": 32
    }
  },
  "radii": {
    "none": 0,
    "xs": 4,
    "sm": 6,
    "md": 8,
    "lg": 12,
    "xl": 16,
    "pill": 9999
  },
  "effects": {
    "shadows": {
      "xs": "0px 1px 2px rgba(0,0,0,0.06)",
      "sm": "0px 2px 6px rgba(0,0,0,0.08)",
      "md": "0px 10px 25px -5px rgba(0,0,0,0.10), 0px 4px 6px -2px rgba(0,0,0,0.06)",
      "lg": "0px 20px 45px -12px rgba(0,0,0,0.18)"
    },
    "borders": {
      "hairline": "1px solid #E5E7EB",
      "strong": "1px solid #CBD5E1",
      "brand": "1px solid #E11D2E",
      "dashedFocus": "1px dashed rgba(139,92,246,0.55)"
    },
    "focus": {
      "ring": "0 0 0 4px rgba(225,29,46,0.28)"
    },
    "opacity": {
      "disabled": 0.5,
      "muted": 0.75,
      "overlay": 0.45
    },
    "blur": {
      "glassSm": "blur(8px)"
    }
  },
  "motion": {
    "durationsMs": {
      "fast": 120,
      "normal": 180,
      "slow": 260,
      "hero": 500
    },
    "easings": {
      "standard": "cubic-bezier(0.2, 0, 0, 1)",
      "emphasized": "cubic-bezier(0.2, 0.8, 0.2, 1)",
      "springLike": "cubic-bezier(0.34, 1.56, 0.64, 1)"
    },
    "recommendedPatterns": {
      "hoverLift": { "translateYPx": -2, "shadow": "sm" },
      "press": { "scale": 0.98 },
      "fadeUp": { "fromOpacity": 0, "fromTranslateYPx": 10 }
    }
  },
  "components": {
    "buttons": {
      "base": {
        "fontFamily": "sans",
        "fontWeight": 600,
        "fontSizePx": 14,
        "lineHeight": 1.2,
        "radius": "sm",
        "padding": { "xPx": 18, "yPx": 10 },
        "minHeightPx": 40,
        "transition": { "durationMs": 180, "easing": "standard" }
      },
      "primarySolid": {
        "background": "#E11D2E",
        "text": "#FFFFFF",
        "border": "1px solid #E11D2E",
        "hover": { "background": "#C51624", "border": "#C51624" },
        "active": { "background": "#A7121D", "border": "#A7121D" },
        "focusRing": "focus.ring"
      },
      "primaryOutline": {
        "background": "#FFFFFF",
        "text": "#E11D2E",
        "border": "1px solid #E11D2E",
        "hover": { "background": "#FFE5E7" },
        "active": { "background": "#FFD3D7" },
        "focusRing": "focus.ring"
      },
      "secondary": {
        "background": "#0B1220",
        "text": "#FFFFFF",
        "border": "1px solid #0B1220",
        "hover": { "background": "#0F1A2B" },
        "focusRing": "0 0 0 4px rgba(15,23,42,0.24)"
      },
      "link": {
        "background": "transparent",
        "text": "#E11D2E",
        "border": "0",
        "hover": { "text": "#C51624", "underline": true }
      }
    },
    "inputs": {
      "base": {
        "fontFamily": "sans",
        "fontWeight": 400,
        "fontSizePx": 14,
        "lineHeight": 1.4,
        "radius": "md",
        "padding": { "xPx": 14, "yPx": 10 },
        "minHeightPx": 40
      },
      "default": {
        "background": "#FFFFFF",
        "text": "#111827",
        "border": "1px solid #E5E7EB",
        "placeholder": "#9CA3AF",
        "hoverBorder": "#CBD5E1",
        "focusBorder": "#E11D2E",
        "focusRing": "focus.ring"
      },
      "select": {
        "chevronColor": "#6B7280",
        "menu": {
          "background": "#FFFFFF",
          "border": "1px solid #E5E7EB",
          "shadow": "md",
          "radius": "md",
          "itemHover": "#F3F4F6"
        }
      }
    },
    "cards": {
      "base": {
        "background": "#FFFFFF",
        "border": "1px solid #EEF2F7",
        "radius": "lg",
        "shadow": "md",
        "paddingPx": 20
      },
      "productCard": {
        "radius": "lg",
        "shadow": "sm",
        "hover": { "shadow": "md", "translateYPx": -2 }
      }
    },
    "navbar": {
      "heightPx": 64,
      "background": "#FFFFFF",
      "borderBottom": "1px solid #EEF2F7",
      "link": {
        "fontSizePx": 14,
        "fontWeight": 500,
        "text": "#111827",
        "hoverText": "#E11D2E"
      }
    },
    "hero": {
      "minHeightPx": 420,
      "overlay": "rgba(0,0,0,0.45)",
      "heading": { "color": "#FFFFFF", "weight": 700 },
      "body": { "color": "rgba(255,255,255,0.88)" }
    },
    "badges": {
      "base": {
        "radius": "pill",
        "padding": { "xPx": 10, "yPx": 4 },
        "fontSizePx": 12,
        "fontWeight": 600
      },
      "success": { "background": "#DCFCE7", "text": "#166534" },
      "warning": { "background": "#FEF3C7", "text": "#92400E" },
      "error": { "background": "#FEE2E2", "text": "#991B1B" },
      "info": { "background": "#DBEAFE", "text": "#1E40AF" }
    },
    "accordion": {
      "item": {
        "borderBottom": "1px solid #EEF2F7",
        "paddingYpx": 16
      },
      "title": { "fontSizePx": 16, "fontWeight": 600, "color": "#111827" },
      "content": { "fontSizePx": 14, "color": "#6B7280", "paddingTopPx": 8 }
    },
    "footer": {
      "background": "#0B1220",
      "text": "rgba(255,255,255,0.78)",
      "heading": "#FFFFFF",
      "link": "rgba(255,255,255,0.86)",
      "divider": "rgba(255,255,255,0.10)"
    }
  }
}
